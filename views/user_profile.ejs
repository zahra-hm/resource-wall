<body>
  <header>
    <%- include('partials/_header') %>
  </header>

  <div class=my-profile>
    <h1>Profile Page</h1>
    <div class="current-profile">
      <!-- Placeholder for username and profile image, MUST fetch from DB -->
      <span class='current-username'>Username</span>
      <img class="profile-image" src="https://icon-library.net/images/generic-user-icon/generic-user-icon-10.jpg">
    </div>

    <div class="update-profile">
      <span class="update-username">Username:</span>
      <input type="text" name="newUsername">
      <button type="submit">Update</button>
      <span class="email">Email:</span>
      <!-- Placeholder for email address, MUST fetch from DB -->
      <span>email@email.com</span>
      <span>Password:</span>
      <!-- Placeholder for password, MUST fetch from DB -->
      <span>password</span>
    </div>
  </div>

